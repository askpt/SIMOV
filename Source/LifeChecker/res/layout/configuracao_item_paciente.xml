<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/text_configuracao_itempaciente_nome_apelido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Medium Text"
        android:textColor="@color/preto"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/text_configuracao_itempaciente_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_configuracao_itempaciente_nome_apelido"
        android:layout_below="@+id/text_configuracao_itempaciente_nome_apelido"
        android:text="Small Text"
        android:textColor="@color/cinzento"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
