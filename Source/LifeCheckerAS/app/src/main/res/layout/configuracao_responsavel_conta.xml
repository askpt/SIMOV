<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/text_configuracao_respconta_loginResponsavel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/loginResponsavel"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_configuracao_respconta_loginResponsavel"
        android:layout_marginTop="25dp"
        android:src="@drawable/barra_azul" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/tb_configuracao_respconta_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/tb_configuracao_respconta_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tb_configuracao_respconta_email"
                android:layout_alignRight="@+id/tb_configuracao_respconta_email"
                android:layout_below="@+id/tb_configuracao_respconta_email"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/bt_configuracao_respconta_validar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tb_configuracao_respconta_confirmarpass"
                android:layout_alignRight="@+id/tb_configuracao_respconta_confirmarpass"
                android:layout_below="@+id/tb_configuracao_respconta_confirmarpass"
                android:layout_marginTop="20dp"
                android:text="@string/validar" />

            <EditText
                android:id="@+id/tb_configuracao_respconta_confirmarpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tb_configuracao_respconta_email"
                android:layout_alignRight="@+id/tb_configuracao_respconta_email"
                android:layout_below="@+id/tb_configuracao_respconta_password"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/confirmarPassword"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/text_configuracao_respconta_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_configuracao_respconta_validar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="TextView" />
        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/loading_configuracao_respconta_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" 
        android:visibility="visible" />

    <ImageView
        android:id="@+id/img_configuracao_responsavel_conta_flecha_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/flecha_dir" />

</RelativeLayout>
